<Window x:Class="Juego_de_preguntas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Juego_de_preguntas"
        mc:Ignorable="d"
        Icon="assets/questions.png"
        Title="Juego de preguntas" Height="450" Width="800">
    <Window.Resources>
        
    </Window.Resources>
    
    <Grid>
        <TabControl>
            <TabItem Header="Jugar" IsSelected="True">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Right" Width="300" Background="#0099BA">
                        <GroupBox Header="Categorías conseguidas" Margin="10" HorizontalAlignment="Center">
                            <WrapPanel>
                                <Image Source="assets/questions.png" Width="100" Margin="5"></Image>
                                <Image Source="assets/questions.png" Width="100" Margin="5"></Image>
                                <Image Source="assets/questions.png" Width="100" Margin="5"></Image>
                                <Image Source="assets/questions.png" Width="100" Margin="5"></Image>
                            </WrapPanel>
                        </GroupBox>
                        <TextBlock Margin="10,0,0,0">Dificultad</TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <Slider Width="150" VerticalAlignment="Center" Margin="10"></Slider>
                            <Button Margin="10" Width="100">Nueva Partida</Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Vertical">
                            <Image Source="assets/questions.png" Width="100" Margin="5"></Image>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </TabItem>
            <TabItem Header="Añadir pregunta"></TabItem>
            <TabItem Header="Gestionar preguntas"></TabItem>
        </TabControl>
    </Grid>
</Window>
